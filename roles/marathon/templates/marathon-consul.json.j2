{
  "id": "marathon-consul",
  "args": [
    "--verbose",
    "--registry={% if do_consul_ssl %}https{% else %}http{% endif %}://consul.service.{{ consul_dns_domain }}:8500"{% if do_consul_auth %},
    "--registry-auth=admin:{{ nginx_admin_password }}"{% endif %}{% if do_consul_acl %},
    "--registry-token={{ consul_acl_marathon_token }}"{% endif %}
  ],
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "{{ marathon_consul_image }}:{{ marathon_consul_image_tag }}",
      "network": "BRIDGE",
      "portMappings": [{"containerPort": 4000, "hostPort": 4000, "protocol": "tcp"}]
    }{% if do_consul_ssl %},
    "volumes": [{
      "containerPath": "/usr/local/share/ca-certificates/",
      "hostPath": "/etc/pki/ca-trust/source/anchors/",
      "mode": "RO"
    }]{% endif %}
  },
  "constraints": [["hostname", "UNIQUE"]],
  "ports": [4000],
  "healthChecks": [{
    "protocol": "HTTP",
    "path": "/health",
    "portIndex": 0
  }],
  "instances": 1,
  "cpus": 0.1,
  "mem": 128
}
